                android:layout_gravity="center"
                android:text="@string/texto_base"
                android:textColor="@color/color_white"
                android:textSize="@dimen/text_size_contador" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/background_color_lila"
            android:orientation="vertical"
            android:padding="@dimen/medium_gap">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_producto_6"
                android:textColor="@color/color_white" />

            <TextView
                android:id="@+id/tv_display_p6"
                android:layout_width="wrap_content"
